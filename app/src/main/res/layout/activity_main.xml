<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/img">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button1"
            android:layout_width="408dp"
            android:layout_height="315dp"
            android:background="@android:color/holo_orange_light"
            android:inputType="textPersonName"
            android:text="Alphabets"
            android:textAlignment="center"
            android:layout_marginTop="150dp"
            android:textSize="40dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="408dp"
            android:layout_height="315dp"
            android:layout_marginTop="150dp"
            android:textSize="40dp"
            android:text="Counting 1 to 20"
            android:textAlignment="center"
            android:inputType="textPersonName"
            android:background="@android:color/holo_blue_dark" />

        <Button
            android:id="@+id/button3"
            android:layout_width="408dp"
            android:layout_height="315dp"
            android:textSize="40dp"
            android:textAlignment="center"
            android:text="Varnmala"
            android:layout_marginTop="150dp"
            android:inputType="textPersonName"
            android:background="@android:color/holo_red_light"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="408dp"
            android:layout_height="315dp"
            android:textSize="40dp"
            android:text="Animals Names"
            android:textAlignment="center"
            android:layout_marginTop="150dp"
            android:inputType="textPersonName"
            android:background="@android:color/holo_green_dark"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="408dp"
            android:layout_height="315dp"
            android:textSize="40dp"
            android:text="Colours Names"
            android:textAlignment="center"
            android:inputType="textPersonName"
            android:layout_marginTop="150dp"
            android:background="@android:color/holo_orange_dark"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="408dp"
            android:layout_height="315dp"
            android:textSize="40dp"
            android:text="Fruits Names"
            android:textAlignment="center"
            android:layout_marginTop="150dp"
            android:inputType="textPersonName"
            android:background="@android:color/holo_purple"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="408dp"
            android:layout_height="315dp"
            android:textSize="40dp"
            android:text="Vegetables Names"
            android:textAlignment="center"
            android:layout_marginTop="150dp"
            android:inputType="textPersonName"
            android:background="#ffff00"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="408dp"
            android:layout_height="315dp"
            android:textSize="40dp"
            android:text="Birds Names"
            android:inputType="textPersonName"
            android:layout_marginTop="150dp"
            android:textAlignment="center"
            android:background="@android:color/holo_red_dark"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="408dp"
            android:layout_height="315dp"
            android:textSize="40dp"
            android:text="Flowers Names"
            android:textAlignment="center"
            android:layout_marginTop="150dp"
            android:inputType="textPersonName"
            android:background="@android:color/holo_orange_light"/>

    </LinearLayout>

</HorizontalScrollView>